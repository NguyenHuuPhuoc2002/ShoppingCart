
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="User">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                UserName
            </th>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                Phone
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usersWithRoles in Model)
        {
            <tr>
                <td>
                    @usersWithRoles.User.UserName
                </td>
                <td>
                    @usersWithRoles.User.Email
                </td>
                <td>
                    @usersWithRoles.User.PasswordHash
                </td>
                <td>
                    @usersWithRoles.User.PhoneNumber
                </td>
                <td>
                    @usersWithRoles.RoleName
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-id="@usersWithRoles.User.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="User" asp-route-id="@usersWithRoles.User.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
